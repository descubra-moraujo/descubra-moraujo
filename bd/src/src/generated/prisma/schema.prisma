generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id     Int    @id @default(autoincrement())
  codigo Int    @unique
  senha  String
}

model PontoTuristico {
  id     Int    @id @default(autoincrement())
  nome   String
  local  String
  imagem String
}

model Evento {
  id     Int      @id @default(autoincrement())
  nome   String
  local  String
  data   DateTime
  imagem String
}
